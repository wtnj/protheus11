Static Function fValidaPeca(Produto)

SB1->( DbSetOrder(1) )
If !SB1->( DbSeek(xFilial("SB1") + Produto ))
	alert("Produto não encontrado! Verifique!")
	Return .F.
EndIf

Return .T.

Static Function desQuadrados(Alt,Lar)
Local nCont := 1
Local nAux  := 14
aCombo := {"63","64","65","66","73","74","75","76","84","85","86","","",""}

If SB1->B1_COD == "VWB03.4.0410.00"
	aCombo := {"","1","2","3","3","13","23","33","2","12","22","32","1","11","21","31"}
	nAux := 16
ElseIf SB1->B1_COD == "VWB03.4.0208.01"
	aCombo := {"11","12","13","14","15","16","20","21","22","23","24","32","33","34","43","44","54"}
	nAux := 17
ElseIf SB1->B1_COD == "VWB03.4.0404.00"
	aCombo := {"11","12","13","21","22","23","31","32","33"}
EndIf

Lar += 30
While nCont <= nAux
	If nCont == 8
		Alt += 120
		Lar -= 1260
	EndIf
	
	oPr:Line(Alt + 1100,Lar + 10,Alt + 1100, Lar + 100) // 1ª Linha Horizontal
	oPr:Line(Alt + 1200,Lar + 10,Alt + 1200, Lar + 100) // 2ª Linha Horizontal
	oPr:Line(Alt + 1100,Lar + 10,Alt + 1200, Lar + 10) // 1ª Linha Vertical
	oPr:Line(Alt + 1100,Lar + 100,Alt + 1200, Lar + 100) // 2ª Linha Vertical
	oPr:Say(Alt + 1120,Lar + 40,aCombo[nCont])
	
	Lar += 180
	nCont++
EndDo
Return

